{
  "compilerOptions": {
    "target": "esnext" ,
    "module": "commonjs" ,
    "lib": [ "esnext", "dom" ],
    "noEmit": true,
    "strict": true ,
    "moduleResolution": "node",
    "esModuleInterop": true ,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["./*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
